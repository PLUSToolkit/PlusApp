<PlusConfiguration version="2.1">
  <DataCollection StartupDelaySec="1.0">
    <DeviceSet 
      Name="PlusServer: da Vinci" 
      Description="Broadcasting tool tracking data through TCP/IP connection and ISI API."
    />
    <Device
      Id="TrackerDevice"
      Type="IntuitiveDaVinci" 
      ToolReferenceFrame="Tracker">
      <DataSources>
        <DataSource Type="Tool" Id="ISI_PSM1_TIP" PortName="ISI_PSM1_TIP"/>
        <DataSource Type="Tool" Id="ISI_PSM2_TIP" PortName="ISI_PSM2_TIP"/>
        <DataSource Type="Tool" Id="ISI_ECM_TIP" PortName="ISI_ECM_TIP"/>
        <DataSource Type="Tool" Id="ISI_MTML1_TIP" PortName="ISI_MTML1_TIP"/>
        <DataSource Type="Tool" Id="ISI_MTMR1_TIP" PortName="ISI_MTMR1_TIP"/>
        <DataSource Type="Tool" Id="ISI_PSM3_TIP" PortName="ISI_PSM3_TIP"/>
        <DataSource Type="Tool" Id="ISI_GANTRY_TIP" PortName="ISI_GANTRY_TIP"/>
        <DataSource Type="Tool" Id="ISI_MTML2_TIP" PortName="ISI_MTML2_TIP"/>
        <DataSource Type="Tool" Id="ISI_MTMR2_TIP" PortName="ISI_MTMR2_TIP"/>
        <DataSource Type="Tool" Id="ISI_CONSOLE1_TIP" PortName="ISI_CONSOLE1_TIP"/>
        <DataSource Type="Tool" Id="ISI_CONSOLE2_TIP" PortName="ISI_CONSOLE2_TIP"/>
        <DataSource Type="Tool" Id="ISI_CORE_TIP" PortName="ISI_CORE_TIP"/>

        <DataSource Type="Tool" Id="ISI_PSM1_EYE" PortName="ISI_PSM1_EYE"/>
        <DataSource Type="Tool" Id="ISI_PSM2_EYE" PortName="ISI_PSM2_EYE"/>
        <DataSource Type="Tool" Id="ISI_ECM_EYE" PortName="ISI_ECM_EYE"/>
        <DataSource Type="Tool" Id="ISI_MTML1_EYE" PortName="ISI_MTML1_EYE"/>
        <DataSource Type="Tool" Id="ISI_MTMR1_EYE" PortName="ISI_MTMR1_EYE"/>
        <DataSource Type="Tool" Id="ISI_PSM3_EYE" PortName="ISI_PSM3_EYE"/>
        <DataSource Type="Tool" Id="ISI_GANTRY_EYE" PortName="ISI_GANTRY_EYE"/>
        <DataSource Type="Tool" Id="ISI_MTML2_EYE" PortName="ISI_MTML2_EYE"/>
        <DataSource Type="Tool" Id="ISI_MTMR2_EYE" PortName="ISI_MTMR2_EYE"/>
        <DataSource Type="Tool" Id="ISI_CONSOLE1_EYE" PortName="ISI_CONSOLE1_EYE"/>
        <DataSource Type="Tool" Id="ISI_CONSOLE2_EYE" PortName="ISI_CONSOLE2_EYE"/>
        <DataSource Type="Tool" Id="ISI_CORE_EYE" PortName="ISI_CORE_EYE"/>
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="TrackerStream" >		  
          <DataSource  Id="ISI_PSM1_TIP" />
          <DataSource  Id="ISI_PSM2_TIP" />
          <DataSource  Id="ISI_ECM_TIP" />
          <DataSource  Id="ISI_MTML1_TIP" />
          <DataSource  Id="ISI_MTMR1_TIP" />
          <DataSource  Id="ISI_PSM3_TIP" />
          <DataSource  Id="ISI_GANTRY_TIP" />
          <DataSource  Id="ISI_MTML2_TIP" />
          <DataSource  Id="ISI_MTMR2_TIP" />
          <DataSource  Id="ISI_CONSOLE1_TIP" />
          <DataSource  Id="ISI_CONSOLE2_TIP" />
          <DataSource  Id="ISI_CORE_TIP" />
          <DataSource  Id="ISI_PSM1_EYE" />
          <DataSource  Id="ISI_PSM2_EYE" />
          <DataSource  Id="ISI_ECM_EYE" />
          <DataSource  Id="ISI_MTML1_EYE" />
          <DataSource  Id="ISI_MTMR1_EYE" />
          <DataSource  Id="ISI_PSM3_EYE" />
          <DataSource  Id="ISI_GANTRY_EYE" />
          <DataSource  Id="ISI_MTML2_EYE" />
          <DataSource  Id="ISI_MTMR2_EYE" />
          <DataSource  Id="ISI_CONSOLE1_EYE" />
          <DataSource  Id="ISI_CONSOLE2_EYE" />
          <DataSource  Id="ISI_CORE_EYE" />
        </OutputChannel>
      </OutputChannels>
    </Device>

    <Device
      Id="CaptureDevice"
      Type="VirtualDiscCapture"
      BaseFilename="RecordingTest.mha"
      EnableCapturing="FALSE" >
      <InputChannels>
        <InputChannel Id="TrackerStream" />
      </InputChannels>
    </Device>    

  </DataCollection>

</PlusConfiguration>
